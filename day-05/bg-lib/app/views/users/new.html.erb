<div class="section">
  <div class="container">
    <h1 class="title">Sign Up</h1>

    <%= form_for(@user) do |form| %>
      <div class="field">
        <%= form.label :name, class: 'label' %>
        <div class="control">
          <%= form.text_field :name, class: 'input' %>
        </div>
      </div>

      <div class="field">
        <%= form.label :email, class: 'label' %>
        <div class="control">
          <%= form.text_field :email, class: 'input' %>
        </div>
      </div>

      <div class="field">
        <%= form.label :password, class: 'label' %>
        <div class="control">
          <%= form.password_field :password, class: 'input' %>
        </div>
      </div>

      <div class="field">
        <%= form.label :password_confirmation, "Confirmation", class: 'label' %>
        <div class="control">
          <%= form.password_field :password_confirmation, class: 'input' %>
        </div>
      </div>


      <div class="field is-grouped">
        <div class="control">
          <%= form.submit "Create Account", class: 'button is-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
